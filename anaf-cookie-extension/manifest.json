{
  "manifest_version": 3,
  "name": "ANAF Cookie Helper",
  "version": "1.0",
  "description": "Automatically extracts ANAF cookies for API integration",
  "permissions": [
    "cookies",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://webserviced.anaf.ro/*",
    "http://127.0.0.1:5001/*",
    "http://localhost:*/*",
    "http://u-core.test/*",
    "https://u-core.test/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ANAF Cookie Helper"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}